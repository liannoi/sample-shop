@model Shop.Application.Entities.CategoryDto

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <h2>@ViewBag.PageMessage</h2>
        <hr>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})

        @Html.HiddenFor(model => model.CategoryId)

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryName, htmlAttributes: new {@class = "col-md-2"}, labelText: "Name")
            <div class="col-md-3">
                @Html.EditorFor(model => model.CategoryName, new {htmlAttributes = new {@class = "form-control mb-3"}})
                @Html.ValidationMessageFor(model => model.CategoryName, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group mt-4">
            <div class="col-md-12">
                <input type="submit" value="@ViewBag.ButtonText" class="btn btn-primary"/>
            </div>
        </div>
    </div>
}

<div class="mt-5">
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}